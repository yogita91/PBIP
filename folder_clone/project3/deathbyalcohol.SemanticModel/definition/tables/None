        column date
            dataType: datetime
            lineageTag: aac4f734-0638-4ae3-88f5-e14c192be728
            summarizeBy: none
            sourceColumn: Date
            annotation SummarizationSetBy = Automatic

        column Employee-Sales
            dataType: string
            lineageTag: e9df29ff-2a78-438d-a038-cdb351399417
            summarizeBy: none
            sourceColumn: [Employee-Sales]
            annotation SummarizationSetBy = Automatic

        column Name
            dataType: string
            lineageTag: 33028ec4-f29b-4907-83bc-a02a161d4720
            summarizeBy: none
            sourceColumn: Name
            annotation SummarizationSetBy = Automatic

        column Total Sales
            dataType: float
            lineageTag: 21efabc5-23d6-4cc9-bd12-f8ec6773aeab
            summarizeBy: sum
            sourceColumn: [Total Sales]
            annotation SummarizationSetBy = Automatic

        column Total Units
            dataType: int64
            lineageTag: 3f07c97c-cd1e-47b2-b3ec-92e0c78102b3
            summarizeBy: sum
            sourceColumn: [Total Units]
            annotation SummarizationSetBy = Automatic

        partition Employees
            mode: import
            source =
                let
                    Source = [lib://DataFiles/dataset.xlsx],
                    Name = "Employees",
                    Data = Load(Source, ooxml, embedded labels, table is Name)
                in
                    Data

        partition Sales
            mode: import
            source =
                let
                    Source = [lib://DataFiles/dataset.xlsx],
                    Name = "Sales",
                    Data = Load(Source, ooxml, embedded labels, table is Name)
                in
                    Data

        partition Locations
            mode: import
            source =
                let
                    Source = [lib://DataFiles/dataset.xlsx],
                    Name = "Locations",
                    Data = Load(Source, ooxml, embedded labels, table is Name)
                in
                    Data

        measure 'Best Performing Employee (Highest Sales)' = FirstSortedValue([Employee-Sales], -Aggr(SUM([Total Sales]), EmpID))
          formatString: U
          lineageTag: 9a37e57b-c94e-4953-90ab-ef67b00363da

        measure 'Highest Sales Location' = FirstSortedValue([Employee-Sales], -Aggr(SUM([Total Sales]), EmpID))
          formatString: U
          lineageTag: e77407f1-f676-418e-aec9-e2fd63204582

        measure 'Sales per Day' = SUM([Total Sales]) / COUNT(DISTINCT [Date])
          formatString: U
          lineageTag: 694f35a4-3ab2-4860-bdb4-f32576ac6eb5

        measure 'Units Sold per Transaction' = SUM([Total Units]) / COUNT([Total Units])
          formatString: U
          lineageTag: 68579e6f-194f-485c-8e9b-620186be3d84

        measure 'Sales per Employee per Location' = SUM([Total Sales]) / COUNT(DISTINCT [Employee-Sales])
          formatString: U
          lineageTag: c276837e-a8ae-4961-9125-a65d36287e9a
